ipmi:
  username: ADMIN    # Example only - change to your credentials
  password: ADMIN    # Example only - change to your credentials

servers: []

discovery:
  bmh_url: "http://192.168.200.2:8082"
  namespace: "g11"  # filter BMH by namespace (empty = all namespaces)

reboot_detection:
  sol_patterns:
    - "POST"
    - "BIOS"
    - "Booting"
  chassis_poll_interval: 30s

logs:
  path: /var/lib/data/logs
  retention_days: 30

server:
  port: 80
